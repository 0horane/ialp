	^(dirRem = dirArq or:
	 [arqueroDP modoTiro class  = Espera and: [dirRem x = dirArq x]] or:
	[arqueroDP modoTiro class = Elije and: ball class = JabulaniSudafricanaRapida and:  [dirRem x = dirArq x] ] or:
	[arqueroDP modoTiro class = Elije and: ball class = PlayeraLentaCostaAzul  and: [delanteroDP modoTiro class = AMatar ] and:  [dirRem y = dirArq y] ]
	) and:(
		(arqueroDP modoTiro class  = Espera and: [ ball class = PlayeraLentaCostaAzul]) or:
		[arqueroDP modoTiro class  = Espera  and: [ ball class = JabulaniSudafricanaRapida] and: [delanteroDP modoTiro class = AMatar ]]
		) not! !

