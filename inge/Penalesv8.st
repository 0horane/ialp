!Penales methodsFor: 'as yet unclassified' stamp: 'LH 9/29/2025 21:01:06'!
arbitroPitaConPelota: pelota delanteroRemataAlArcoConDireccion: direcciónRemate arqueroSeLanzaEnDirección: direcciónArquero
	|dirRem dirArq|
	dirRem := Dirección with: direcciónRemate or: [self error: Penales direccionTiroFueraDeRango] .
	dirArq := Dirección with: direcciónArquero or:  [self error: Penales direccionArqueroFueraDeRango ].
	
	fuerzaResultanteDeAtajada :=  arqueroDP fuerzaEfectivaVsDelantero: delanteroDP pelota: pelota.
	fuerzaResultanteDeTiro := delanteroDP fuerzaEfectivaConPelota: pelota .
	
	dirRem := delanteroDP ajustarDirección: dirRem segúnPelota: pelota.
	remateResultante  := dirRem x @ dirRem y.
	
	(arqueroDP modoTiro class  = Espera  and: [pelota class = PlayeraLentaCostaAzul ] and: [delanteroDP modoTiro class = AMatar ] ) ifTrue:[
		arqueroPuntaje  := arqueroPuntaje  + 1.
		] ifFalse: [
			(self makesContact: dirRem with: dirArq  ball: pelota) ifTrue:[
				(delanteroDP fuerzaEfectivaConPelota: pelota) > fuerzaResultanteDeAtajada ifTrue: [
					delanteroPuntaje := delanteroPuntaje + 1.
					] ifFalse:[
					arqueroPuntaje  := arqueroPuntaje  + 1.
					]. 
			]	 ifFalse: [
				dirRem fueraDeRango ifTrue:[
						arqueroPuntaje  := arqueroPuntaje  + 1.
					] ifFalse: [
						delanteroPuntaje := delanteroPuntaje + 1.
					].
				
				
			].
		].
	 
	
	
	
	! !

